<div class="navbar navbar-default navbar-fixed-top">
  <div class="container nav">

    <div class="navbar-header">
      <%= link_to image_tag("droply-icon.png", class: "navbar-brand-image"), root_path %>
      <%= link_to "Droply", root_path, class: "navbar-brand pull-right hidden-xs", id: "nav-title" %>
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle Navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div> <!-- navbar-header -->

    <ul class="nav navbar-nav navbar-right collapse navbar-collapse">
      <li><%= link_to "Menu", items_path %></li>

      <% if current_user %>
        <% if current_user.admin? %>
          <li><%= link_to "Edit Items", admin_items_path %></li>
          <li><%= link_to "Edit Categories", admin_categories_path %></li>
          <li><%= link_to "List Orders", admin_orders_path %></li>
          <li><%= link_to "Graph", graph_index_path %></li>
        <% end %>

        <li><%= link_to "My Orders", orders_path(current_user) %></li>
        <li><%= link_to current_user.full_name, current_user %></li>
        <li><%= link_to "Sign out", logout_path, method: :delete, id: "sign-out" %></li>
      <% else %>
        <li><%= link_to "Sign in", "#", data: { toggle: "modal", target: "#signInModal" } %></li>
        <li><%= link_to "Sign up", "#", data: { toggle: "modal", target: "#signUpModal" } %></li>
      <% end %>

      <li><%= link_to cart_items_path, id: "cart" do %>
        <span class='glyphicon glyphicon-shopping-cart' aria-hidden='true'>
          <%= cart.count_total %>
        <% end %></li>
      <li><a href="/" data-target="#" data-toggle="dropdown">
          About <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to "Our Story", "/about" %></li>
          <li><%= link_to "Contact Us", root_path %></li>
          <li><%= link_to "Blog", root_path %></li>
        </ul>
      </li>
    </ul>

  </div> <!-- container nav -->
</div> <!-- navbar navbar-default navbar-fixed-top -->

<!-- Sign in modal -->
<div id="signInModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="signInModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= render partial: "partials/sign_in" %>
    </div>
  </div>
</div>

<!-- Sign up modal -->
<div id="signUpModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="signUpModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= render partial: "partials/sign_up" %>
    </div>
  </div>
</div>
